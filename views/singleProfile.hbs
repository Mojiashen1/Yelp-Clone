
<h4>{{name}}'s Profile Page</h4>
<p>{{location}}

<form action="/following/{{userid}}">
  <button type = 'submit'>Follow</button>
</form>

<h4 class = '.col-md-4'>Followers</h4>
{{#each allFollowers}}
  <p>{{name}}</p>
  <p>{{location}} </p>
{{/each}}

<h4 class = '.col-md-4'>Followings</h4>
{{#each allFollowing}}
  <p>{{name}}</p>
  <p>{{location}} </p>
{{/each}}

<h4 class = '.col-md-4'>Reviews</h4>
{{#each reviews}}
  <p>{{restaurantId.name}}</p>
  <p>{{stars}}</p>
  <p>{{content}}</p>
{{/each}}


